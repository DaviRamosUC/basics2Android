<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MinhasAnotacoes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/soft_brown</item>
        <item name="colorPrimaryVariant">@color/darker_brown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/soft_brown</item>
        <item name="colorSecondaryVariant">@color/darker_brown</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MinhasAnotacoes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MinhasAnotacoes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MinhasAnotacoes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>