<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/segundo_fundo"
    android:backgroundTint="@null"
    android:padding="40dp"
    tools:context=".fragments.NumerosFragment">

    <ImageButton
        android:id="@+id/imageButton1"
        style="@style/numerosStyle"
        android:contentDescription="@string/app_name"
        android:src="@drawable/um"
        app:layout_constraintBottom_toTopOf="@+id/imageButton3"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck,ImageContrastCheck" />

    <ImageButton
        android:id="@+id/imageButton2"
        style="@style/numerosStyle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/dois"
        app:layout_constraintBottom_toTopOf="@+id/imageButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButton1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/imageButton3"
        style="@style/numerosStyle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tres"
        app:layout_constraintBottom_toTopOf="@+id/imageButton5"
        app:layout_constraintEnd_toStartOf="@+id/imageButton4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton1"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/imageButton4"
        style="@style/numerosStyle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/quatro"
        app:layout_constraintBottom_toTopOf="@+id/imageButton6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButton3"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/imageButton5"
        style="@style/numerosStyle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cinco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/imageButton6"
        style="@style/numerosStyle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/seis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/imageButton4"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/app_name" />


</androidx.constraintlayout.widget.ConstraintLayout>